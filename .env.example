# Base URL used for canonical links and metadata
NEXT_PUBLIC_SITE_URL=https://deepspeaker.example.com

# Optional GA4 measurement id (format: G-XXXXXXXXXX)
NEXT_PUBLIC_GA_MEASUREMENT_ID=

# Shared secret for securing /api/cron/daily
CRON_SECRET=replace_with_a_strong_secret

# Publisher target: auto | github | filesystem
# auto = github on Vercel, filesystem locally
PUBLISH_TARGET=auto

# GitHub publishing (required when PUBLISH_TARGET resolves to github)
GITHUB_TOKEN=
GITHUB_REPO_OWNER=cobymyers
GITHUB_REPO_NAME=deepspeakerco
GITHUB_BRANCH=main

# Optional LLM-based writing. If omitted, template writer is used.
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4.1-mini

# Optional: set to true to log verbose discovery diagnostics
PIPELINE_DEBUG=false
